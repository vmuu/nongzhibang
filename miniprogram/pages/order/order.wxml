<!--order.wxml-->
<cu-custom bgColor="bg-main" isBack="{{false}}">

  <view slot="content">
    订单管理
  </view>
</cu-custom>
<view class="content ">
  <scroll-view id="scrollView" scroll-x class="bg-white nav shadow-warp">
    <view class="flex text-center">
      <view class="cu-item flex-sub {{index==TabCur?'text-orange cur':''}}" wx:for="{{4}}" wx:key="index" bindtap="tabSelect"
        data-id="{{index}}">
        {{orderState[index]}}
      </view>
    </view>
  </scroll-view>
  <swiper class="swiper" bindchange="swiperChange" style="height:{{orderItemHeight}}px" current="{{TabCur}}">
    <swiper-item class="">
      <scroll-view bindscrolltolower="reachBottom" refresher-enabled="true" scroll-y style="height:100%">
        <view class="orderBox">
          <!--全部订单-->
          <empty wx:if="{{allOrder.length==0}}" isFull="{{true}}"></empty>
          <orderItem wx:for="{{allOrder}}" order="{{item}}" wx:key="index"></orderItem>
    <view class="loadmore" wx:if="{{showLoadMore}}" >{{loadMoreText}}</view>
        </view>
      </scroll-view>
    </swiper-item>
    <swiper-item>
      <scroll-view bindscrolltolower="reachBottom" refresher-enabled="true" scroll-y style="height:100%">
        <view class="orderBox">
          <!--交易中-->
          <empty wx:if="{{ingOrder.length==0}}" isFull="{{true}}"></empty>
          <orderItem wx:for="{{ingOrder}}" order="{{item}}" wx:key="index"></orderItem>
    <view class="loadmore" wx:if="{{showLoadMore}}" >{{loadMoreText}}</view>
        </view>
      </scroll-view>
    </swiper-item>
    <swiper-item>
      <scroll-view bindscrolltolower="reachBottom" refresher-enabled="true" scroll-y style="height:100%">
        <view class="orderBox">
          <!--已完成-->
          <empty wx:if="{{accomplishOrder.length==0}}" isFull="{{true}}"></empty>
          <orderItem wx:for="{{accomplishOrder}}" order="{{item}}" wx:key="index"></orderItem>
    <view class="loadmore" wx:if="{{showLoadMore}}" >{{loadMoreText}}</view>
        </view>
      </scroll-view>
    </swiper-item>
    <swiper-item>
      <scroll-view bindscrolltolower="reachBottom" refresher-enabled="true" scroll-y style="height:100%">
        <view class="orderBox">
          <!--已取消-->
          <empty wx:if="{{cancelOrder.length==0}}" isFull="{{true}}"></empty>
          <orderItem wx:for="{{cancelOrder}}" order="{{item}}" wx:key="index"></orderItem>
    <view class="loadmore" wx:if="{{showLoadMore}}" >{{loadMoreText}}</view>
        </view>
      </scroll-view>
    </swiper-item>
  </swiper>
  

</view>