     <cover-image class="logo1" src="../../images/语音.png"></cover-image>   
    <text wx:if="{{recordState == false}}">按住　　搜索</text>
    <text wx:else>松开　　结束</text>
  </button>
  <view class="yuyinWrap">
    <!-- 开始语音 弹出语音图标表示正在录音 -->
