/* pages/component/nav/nav.wxss */
.VerticalNav.nav {
  width: 200rpx;
  white-space: initial;
}

.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;
}

.VerticalNav.nav .cu-item.cur {
  background-color: #f1f1f1;
}
.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}
.VerticalBox{
  display: flex;
}
.VerticalMain{
  background-color: #f1f1f1;
}
.cu-form-group .title {
  min-width: calc(4em + 30rpx);
}
.fcx-head{
  z-index:1000;
  position: absolute;
  width: 90%;
  padding: 3%;
}
.fcx-test{
  clear: both;
}
.move-cur{
  transform:100ms linear 0ms !important;
}
.cu-item{
  transition:100ms linear 0ms !important;
}
.cu-form-group{
  text-align: left;
  
}
