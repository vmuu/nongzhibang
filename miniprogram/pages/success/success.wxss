/* miniprogram/pages/success/success.wxss *//* 店铺及产品详情 */
.all_merchants {
  width: 96%;
  margin: 15rpx;
  margin-top: 10rpx;

  padding: 10rpx;
  background-color: white;
  display: flex;
  border-radius: 20rpx;
}

.all_merchants_left,
.all_merchants_left>image {
  margin-top: 3rpx;
  margin-left: 5rpx;
  width: 190rpx;
  height: 195rpx;
  border-radius: 20rpx;
}
.all_merchants_right{
  margin-top: 80rpx;
}
.all_merchants_right .merchants_Price {
  font-size: 30rpx;
  color: #E42822;
  font-weight: bold;
  margin-right: 25rpx;
}
.all_merchants_con {
  /* padding-left: 20rpx; */
  margin-left: 20rpx;
  width: 100%;
  height: 200rpx;
  align-items: center;
  display: grid;
  overflow: hidden;
}

/* 收获栏地址样式 */
.consignee {
  font-size: 30rpx;
  font-weight: 500;
  color: black;
}

.phone {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #666666;
}

.iconBox {
  padding: 5rpx;
  width: 54rpx;
  height: 54rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #11998e;
  background: -webkit-linear-gradient(to right, #38ef7d, #11998e);
  background: linear-gradient(to right, #38ef7d, #11998e);
  color: #fff;
  border-radius: 50%;
}
.addressItem {
  width: 100%;
  position: relative;
  border-radius: 15rpx;
  padding: 20rpx;
  background-color: #fff;
}
.addressBox {
  width: 96%;
  margin: 15rpx;
  display: flex;
  align-items: center;
}

.address {
  font-size: 28rpx;

}

.addressDetail {
  font-size: 25rpx;
}

.infoBox {
  margin-left: 20rpx;
}

.iconEdit {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  font-size: 35rpx;

}

.controlBtn {
  margin-top: 20rpx;
}

.controlBtnBox {
  padding: 20rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.radioBox{
  display: flex;
  align-items: center;
}
.radio{
  margin-right: 10rpx;
}
.botton-box button{
  height:100%;
  border-radius: 1000rpx;
}
.merchants_markings{
  margin-top: 10rpx;
}
.successtext{
  font-size: 55rpx;
}
.successtexttype{
  font-size: 35rpx;
}
/* 状态 */
.type-order{
width: 96%;
margin: 15rpx;

}