<cu-custom bgColor="bg-main" isBack="{{false}}">
  <!-- <text class='cuIcon-back'>返回</text>  -->
  <view slot="content">
    订单详情
  </view>
</cu-custom>

<!-- 店铺栏 -->
<view class="all_merchants">
  <view class="all_merchants_con">
    <text class="merchants_title">店铺：小锅米线店</text>
    <text class="product-type">分类：麻辣小吃</text>
    <view>
      <text class="cuIcon-location textOverflow">云南农业职业技术学院美食街2楼</text>
    </view>
  </view>
</view>



<!-- 产品信息栏 -->
<view class="all_merchants">
  <view class="all_merchants_left">
    <image src="http://cdn.xiaoxingbobo.top/nongzhibang/202145/1930221620214222581"></image>
  </view>
  <view class="all_merchants_con">
    <text class="merchants_title">鲜香酸菜鱼</text>
    <view class="merchants_marking_warp">
      <view class="merchants_marking">店铺上新</view>
      <!-- <view class="merchants_marking merchants_marking_cfgf">炒饭盖饭</view> -->
    </view>
    <view class="merchants_text_marking_warp">
      <text class="merchants_text_marking">起送价：¥0</text>
      <text class="merchants_text_marking">配送：¥2</text>
    </view>
  </view>
  <view class="all_merchants_right">
    <view class="merchants_Price">￥20.99</view>
    <view class="old_Price">￥23.99</view>
    <view class="merchants_type">立即抢购</view>
  </view>
</view>


<!-- 产品详情 -->
<view class="all_merchants">
  <view class="all_merchants_con">
    <text class="merchants_title">产品详情</text>
    <view class="merchants_marking_warp">
      <view class="merchants_marking">原料：鸭脖 </view>
      <view class="merchants_marking">口味：麻辣/微辣</view>
    </view>
    <view>
      <text class="cuIcon-location textOverflow">云南农业职业技术学院美食街2楼</text>
    </view>
  </view>
</view>


<!-- 收获地址 -->
<view class="addressBox">
  <view class="addressItem">
    <view class="addressBox">
      <view class="iconBox"><text class="cuIcon-locationfill"></text></view>
      <view class="infoBox">
        <text class="consignee">樊兴东</text><text class="phone">1821541582</text>
        <view class="address">云南省昆明市五华区</view>
        <view class="addressDetail">茭菱路云南农业职业技术学院</view>
      </view>
      <text class="cuIcon-edit iconEdit"></text>
    </view>
    <view class="pubTopLine controlBtnBox">
      <view class="radioBox"><radio class="radio" checked></radio>设置为默认地址</view>
      <view bindtap="tapDelete">删除</view>
    </view>
  </view>
</view>

<!-- 支付方式单选框 -->
<radio-group class="radio-group" bindchange="radioChange">
    <label class="radio" wx:for="{{items}}">
        <radio value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
    </label>
</radio-group>

<!-- 交易订单 -->
<view class="cu-bar bg-white tabbar botton-box  ">
  <button class="bg-red submit radius">订单确定</button>
</view>
