/* components/order/order.wxss */
@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";
@import "/style/public.wxss";
.headBox{
  display: flex;
  align-items: center;
  position: relative;
}
.textOverflow {
  /* 多余内容省略号处理-单行 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.orderItem{
  border-radius: 10rpx;
  background-color: white;
  margin-top: 20rpx;
  padding: 20rpx;
}
.shopAvatar{
  width: 50rpx;height: 50rpx;
  border-radius: 50%;
}
/*半像素底部细线*/
.pubBotLine {
	position: relative;
}
.pubBotLine:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  background: #EAEAEA;
  width: 100%;
  height: 1px;
  -webkit-transform: scaleY(0.5);
  -webkit-transform-origin: 0 bottom;
}
.segmentationLine{
  margin-bottom: 20rpx;
  padding-top: 20rpx;
}
.orderState{
  position: absolute;
  right: 0;
  top: 0;
  font-size: 25rpx;
  color: #666666;
}
.shopName{
  width: 400rpx;
  font-size: 30rpx;
  margin-left: 20rpx;
  color: #666666;
  font-weight: bold;
}
.productBox{
  display: flex;
}
.productDescBox{
  margin-left: 20rpx;
  color: #666666;
}
.productTitle{
  width: 400rpx;
  font-size: 28rpx;
  color: #666666;
}
.productPhoto{
  width: 150rpx;
  height: 150rpx;
  border-radius: 5rpx;
}
.orderDate{
  margin-top: 10rpx;
  font-size: 25rpx;
  color: #666666;
}
.moneyBox{
  font-size: 25rpx;
  margin-top: 10rpx;
}
.money{
  color: red;
  font-size: 28rpx;
}
.btnGroup{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 10rpx;
}
.look{
  border: #f5f5f5 1rpx solid;
  border-radius: 40rpx;
  padding: 8rpx 30rpx;
  font-size: 28rpx;
  color: #666666;
  
}

.cancel {
  border: orange 1rpx solid;
  margin-left: 10rpx;
  border-radius: 40rpx;
  padding: 8rpx 30rpx;
  font-size: 28rpx;
  color: orange;
}